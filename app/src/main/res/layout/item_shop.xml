<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_shop"
    android:layout_marginBottom="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_165"
        android:layout_height="@dimen/dp_160"
        app:roundTopLeft="true"
        app:roundedCornerRadius="@dimen/dp_10"
        app:roundBottomRight="false"
        app:roundBottomLeft="false"
        android:src="@mipmap/image"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="桔梗复古法式过膝连衣裙超仙女森系甜美长款"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/sp_14"
        android:layout_below="@id/image"
        android:layout_alignLeft="@id/image"
        android:layout_alignRight="@id/image"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"
        />
    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:text="￥188"
        android:textSize="@dimen/sp_13"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignLeft="@id/name"
        android:layout_marginBottom="@dimen/dp_11"
        />
    <TextView
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1019人付款"
        android:textSize="@dimen/sp_10"
        android:layout_alignBottom="@id/money"
        android:layout_toRightOf="@id/money"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_2"
        android:textColor="#666666"
        />
    <ImageView
        android:id="@+id/del"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_alignRight="@id/image"
        android:layout_alignBottom="@id/pay"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@mipmap/has"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/edit"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_alignRight="@id/image"
        android:layout_alignBottom="@id/pay"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@mipmap/phonen"
        android:visibility="gone"
        />


</RelativeLayout>