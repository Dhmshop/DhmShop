<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_shop"
    android:paddingBottom="@dimen/dp_15"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/mine_head"
        app:roundAsCircle="true"
        />
    <CheckBox
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自然堂"
        android:button="@null"
        android:layout_marginLeft="@dimen/dp_12"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:theme="@style/CheckBoxTheme"
        android:layout_toRightOf="@id/image"
        android:layout_alignTop="@id/image"
        android:layout_alignBottom="@id/image"
        android:textSize="@dimen/sp_16"
        />
    <ImageView
        android:id="@+id/text_fa"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:src="@mipmap/back_shop"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp_7"
        android:layout_toRightOf="@id/title"
        android:layout_alignTop="@id/title"
        android:layout_alignBottom="@id/title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="***"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_alignTop="@id/title"
        android:gravity="center"
        android:layout_alignBottom="@id/title"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_one"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_110"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        app:roundedCornerRadius="@dimen/dp_10"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_two"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_110"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/image_one"
        android:layout_marginTop="@dimen/dp_10"
        app:roundedCornerRadius="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_three"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_110"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/image_two"
        app:roundedCornerRadius="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        />

</RelativeLayout>