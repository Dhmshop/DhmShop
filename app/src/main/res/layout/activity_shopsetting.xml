<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".view.mine.myshop.ShopsettingActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="店铺管理"
        android:textSize="@dimen/sp_21"
        android:gravity="center"
        android:textColor="#222"
        android:layout_marginTop="@dimen/dp_9"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_21"
        android:src="@mipmap/allback"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_11"
        />
    <TextView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:text="编辑"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:layout_alignBottom="@id/back"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#F7F6FB"
        android:layout_below="@id/back"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/headimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品类别"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="#222"
            />
        <TextView
            android:id="@+id/shoptype"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:textColor="#999999"
            android:text="请选择商品类别"
            android:gravity="center_vertical"

            />

    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/headimage"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/nack_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headimage"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="店铺名称"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="#222"
            />
        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:textColor="#999999"
            android:text="请设置店铺名称"
            android:gravity="center_vertical"

            />
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/nack_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nack_name"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="店铺简介"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="#222"
            />
        <TextView
            android:id="@+id/text_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请设置店铺简介"
            android:textColor="#999999"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/sex"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sex"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="客服电话"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="#222"
            />
        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请设置客服电话"
            android:textColor="#999999"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>

    <TextView
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/area"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/area"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="小店位置"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="#222"
            />
        <TextView
            android:id="@+id/text_position"
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:text="请设置小店位置"
            android:textColor="#999999"
            android:gravity="end"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/position"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/bao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/position"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="包邮"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="#222"
            />
        <TextView
            android:id="@+id/text_bao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请设置是否包邮"
            android:textColor="#999999"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>


</RelativeLayout>