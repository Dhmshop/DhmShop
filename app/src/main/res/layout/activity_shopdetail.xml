<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".view.mine.myshop.ShopdetailActivity">
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="塗月"
            android:textColor="@color/mainblack"
            android:textSize="@dimen/sp_21" />
        <ImageView
            android:id="@+id/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/title"
            android:layout_alignRight="@id/title"
            android:layout_alignTop="@id/title"
            android:gravity="center"
            android:src="@mipmap/usern"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_10"
            />
        <LinearLayout
            android:id="@+id/shoper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/title"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical"
            >
            <CheckBox
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_3"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_5"
                android:button="@null"
                android:textColor="@drawable/shopselector"
                android:text="编辑"
                />
            <CheckBox
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:button="@null"
                android:text="删除"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_10"
                android:textColor="@drawable/shopselector"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_5"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_31"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/allback"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/address"
        android:layout_centerInParent="true"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@mipmap/imagead"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#F7F6FB"
        android:orientation="vertical"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/main_tablayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            app:tabPaddingStart="@dimen/dp_5"
            app:tabPaddingEnd="@dimen/dp_5"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/main_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F6FB" />

    </LinearLayout>

</LinearLayout>