<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_shop"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    >
    <LinearLayout
        android:id="@+id/shops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15">
        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:theme="@style/CheckBoxTheme"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_2"
            />
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/dianpu"
            />
        <CheckBox
            android:id="@+id/nameshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自然堂"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_5"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:theme="@style/CheckBoxTheme"
            android:textSize="@dimen/sp_16"
            />
        <ImageView
            android:id="@+id/text_fa"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:src="@mipmap/back_shop"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_7"
            />
    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_120"
        app:roundedCornerRadius="@dimen/dp_10"
        android:src="@mipmap/image"
        android:layout_alignLeft="@id/shops"
        android:layout_below="@id/shops"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toLeftOf="@id/price"
        android:layout_alignTop="@id/image"
        android:text="法式甜美小清新气质休闲显瘦短袖连衣裙A字裙夏季"
        android:textSize="@dimen/sp_13"
        android:layout_marginRight="@dimen/dp_13"
        />
    <TextView
        android:id="@+id/param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/dp_10"
        android:text="颜色:蓝色；尺码:M"
        android:textColor="#666666"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:drawablePadding="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mainblack"
        android:text="￥188"
        android:textSize="@dimen/sp_13"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/name"
        android:layout_marginRight="@dimen/dp_15"
        android:scrollbarSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mainblack"
        android:text="x1"
        android:textSize="@dimen/sp_13"
        android:layout_alignParentRight="true"
        android:layout_below="@id/price"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_15"
        android:scrollbarSize="@dimen/sp_14"
        />
    <RelativeLayout
        android:id="@+id/toshou"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看物流"
            android:textColor="#666"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/bordern"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:layout_toLeftOf="@id/sure"
            android:layout_marginRight="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"
            android:textColor="@color/main"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/borders"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/more_shou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="***"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/cha"
            android:layout_alignBottom="@id/cha"
            android:layout_marginLeft="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tofa"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/cui"
            android:layout_width="@dimen/dp_85"
            android:layout_height="wrap_content"
            android:text="催发货"
            android:textColor="#666"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:background="@drawable/bordern"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:layout_toLeftOf="@id/buys"
            android:layout_marginRight="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/buys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次购买"
            android:textColor="@color/main"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/borders"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tofu"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/xiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改地址"
            android:textColor="#666"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/bordern"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:layout_toLeftOf="@id/topay"
            android:layout_marginRight="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/topay"
            android:layout_width="@dimen/dp_85"
            android:layout_height="wrap_content"
            android:text="去支付"
            android:textColor="@color/main"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/borders"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/more_fu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="***"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/xiu"
            android:layout_alignBottom="@id/xiu"
            android:layout_marginLeft="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/toping"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/image"
        >
        <TextView
            android:id="@+id/liu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看物流"
            android:textColor="#666"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/bordern"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:layout_toLeftOf="@id/ping"
            android:layout_marginRight="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/ping"
            android:layout_width="@dimen/dp_85"
            android:layout_height="wrap_content"
            android:text="评价"
            android:textColor="@color/main"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/borders"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</RelativeLayout>