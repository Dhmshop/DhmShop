<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小石头"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        android:textColor="@color/mainblack"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18931077675"
        android:layout_toRightOf="@id/name"
        android:layout_alignTop="@id/name"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/sp_17"
        android:layout_marginLeft="@dimen/dp_10"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/def"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_13"
        android:background="@drawable/back_def"
        android:text="默认"
        android:gravity="center"
        android:layout_toRightOf="@id/phone"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_alignTop="@id/phone"
        android:layout_alignBottom="@id/phone"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:textColor="#FE004E"
        />
    <ImageView
        android:id="@+id/edit"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_25"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/back_shop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignTop="@id/name"
        android:layout_alignBottom="@id/name"
        />
    <TextView
        android:id="@+id/addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京 北京市 丰台区 万丰路 300号万丰商务写字
楼A栋608室"
        android:layout_below="@id/name"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_11"
        android:lineHeight="@dimen/dp_20"
        android:layout_toLeftOf="@id/edit"
        android:layout_marginRight="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_15"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_marginRight="@dimen/dp_15"
        />
</RelativeLayout>