<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_15"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_105"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listelitegoods_goodsimages"
            android:layout_width="@dimen/dp_95"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listelitegoods_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="法式甜美小清新气质休闲"
                android:textColor="@color/mainblack"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listelitegoods_goodskeywordone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/listelitegoods_guanjianci"
                    android:text="很显白"
                    android:textColor="#338BFF"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:id="@+id/listelitegoods_goodskeywordtwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/listelitegoods_guanjianci"
                    android:text="很显白"
                    android:textColor="#338BFF"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:id="@+id/listelitegoods_goodskeywordthree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/listelitegoods_guanjianci"
                    android:text="很显白"
                    android:textColor="#338BFF"
                    android:textSize="@dimen/dp_10" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2.5dp"
                    android:src="@mipmap/rmb" />

                <TextView
                    android:id="@+id/listelitegoods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="bottom"
                    android:textColor="#FE0052"
                    android:textSize="@dimen/sp_22"
                    tools:text="188" />

                <TextView
                    android:id="@+id/listelitegoods_salenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_19"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_10"
                    tools:text="1019人付款" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>