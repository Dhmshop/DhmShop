<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_188"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_shop"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15">
    <LinearLayout
        android:id="@+id/shops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:theme="@style/CheckBoxTheme"
            android:drawablePadding="@dimen/dp_2"
            />
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/dianpu"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自然堂"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_5"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:theme="@style/CheckBoxTheme"
            android:textSize="@dimen/sp_16"
            />        <ImageView
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:src="@mipmap/back_shop"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_7"
            />
    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_120"
        app:roundedCornerRadius="@dimen/dp_10"
        android:src="@mipmap/image"
        android:layout_alignLeft="@id/shops"
        android:layout_below="@id/shops"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignTop="@id/image"
        android:text="法式甜美小清新气质休闲显瘦短袖
连衣裙A字裙夏季"
        android:textSize="@dimen/sp_13"
        android:layout_marginRight="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/dp_10"
        android:text="颜色:蓝色；尺码:M"
        android:textColor="#666666"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:drawableRight="@mipmap/carpull"
        android:drawablePadding="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FE0052"
        android:text="￥188"
        android:textSize="@dimen/sp_13"
        android:layout_alignLeft="@id/name"
        android:layout_alignBottom="@id/image"
        />

    <dhm.com.dhmshop.utils.CustomJiaJian
        android:id="@+id/num"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_23"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        >

    </dhm.com.dhmshop.utils.CustomJiaJian>


</RelativeLayout>