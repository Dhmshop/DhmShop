<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <dhm.com.dhmshop.framework.module.commodity.base.NoScrollListView
            android:id="@+id/commdetial_noscllv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/grey_normal_bg"
            android:dividerHeight="@dimen/dp_6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_normal_bg"
            android:padding="@dimen/dp_8">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_toLeftOf="@+id/commdetail_daodi"
                android:background="@color/deep_transparent" />

            <TextView
                android:id="@+id/commdetail_daodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="已经最到底啦!"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@+id/commdetail_daodi"
                android:background="@color/deep_transparent" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>