<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.mine.AddaddrActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加收货地址"
        android:textSize="@dimen/sp_21"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_9"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title"
        android:layout_alignTop="@id/title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        android:text="删除"
        android:textColor="@color/main"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_31"
        android:padding="@dimen/dp_3"
        android:src="@mipmap/common_back"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_7"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#F7F6FB"
        android:layout_below="@id/back"
        android:layout_marginTop="@dimen/dp_5"
        />
    <LinearLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_35"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="收货人"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            />
        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@null"
            android:hint="请填写收货人姓名"
            android:textSize="@dimen/sp_13"
            />
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/address"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="手机号码"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            />
        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:background="@null"
            android:hint="请填写收货人姓名"
            android:textSize="@dimen/sp_13"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:text="+86"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:padding="@dimen/dp_3"
            android:src="@mipmap/back_shop"
            android:layout_marginRight="@dimen/dp_15"

            />
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/safe"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/safe"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="所在地区"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/myaddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:textColor="#999999"
            android:layout_marginRight="@dimen/dp_15"
            android:text="省市区县、乡镇等"

            />
        <ImageView
            android:id="@+id/addrnext"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="2"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:src="@mipmap/back_shop"
            android:layout_marginRight="@dimen/dp_6"

            />
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/about"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        />

    <LinearLayout
        android:id="@+id/addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/dp_10"
            android:textStyle="bold"
            android:text="详细地址"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            />
        <EditText
            android:id="@+id/addrs"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_80"
            android:layout_weight="8"
            android:textColor="#999999"
            android:background="@null"
            android:textSize="@dimen/sp_13"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="街道、楼牌号等"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="top"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/line"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/addr"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/def"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_below="@id/line"
        android:textStyle="bold"
        android:text="设置为默认地址"
        android:textSize="@dimen/sp_14"
        />
    <ImageView
        android:id="@+id/quan"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_15"
        android:background="@drawable/back_quan"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/def"
        android:layout_marginRight="@dimen/dp_15"
        />
    <ImageView
        android:id="@+id/def_no"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:background="@drawable/back_yuan"
        android:layout_alignLeft="@id/quan"
        android:layout_alignTop="@id/quan"
        android:layout_alignBottom="@id/quan"
        android:layout_margin="@dimen/dp_1"
        />
    <ImageView
        android:id="@+id/def_yes"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:background="@drawable/back_yuans"
        android:layout_alignRight="@id/quan"
        android:layout_alignTop="@id/quan"
        android:layout_alignBottom="@id/quan"
        android:layout_margin="@dimen/dp_1"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/sure"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/back_btn"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:layout_below="@id/def"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_100"
        />



</RelativeLayout>