<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".adapter.mine.EvaluateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的评价"
        android:textSize="@dimen/sp_21"
        android:gravity="center"
        android:textColor="@color/mainblack"
        android:layout_marginTop="@dimen/dp_9"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_31"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/allback"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_7"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/back"
        android:layout_marginTop="@dimen/dp_5"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@id/back"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_30"
        app:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_alignBottom="@id/image"
        android:gravity="center"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="美美哒"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/sp_17"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:text="全部评价:6"
        android:textSize="@dimen/sp_13"
        android:layout_alignTop="@id/image"
        android:layout_alignBottom="@id/image"
        android:gravity="center"
        android:layout_toRightOf="@id/name"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F7F6FB"
        android:layout_below="@id/image"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待评价（"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/sp_18"
        android:layout_below="@id/line1"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_toRightOf="@id/a"
        android:layout_alignTop="@id/a"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/mainblack"
        android:layout_alignBottom="@id/a"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="）"
        android:layout_toRightOf="@id/num"
        android:layout_alignTop="@id/a"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/sp_18"
        android:layout_alignBottom="@id/a"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看全部"
        android:textSize="@dimen/sp_14"
        android:textColor="#666"
        android:layout_alignParentRight="true"
        android:drawableRight="@mipmap/minenext"
        android:drawablePadding="@dimen/dp_7"
        android:layout_alignTop="@id/a"
        android:layout_alignBottom="@id/a"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_15"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        >
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="#F7F6FB"
        android:layout_below="@id/recy"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/alleva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部评价"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/mainblack"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@id/line2"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/allrecy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alleva"
        android:layout_marginLeft="@dimen/dp_15"
        >
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>