<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".view.mine.order.ShowevaluateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发表评论"
        android:textSize="@dimen/sp_21"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_9"
        android:textColor="@color/mainblack"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_31"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/allback"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_7"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/back"
        android:layout_marginTop="@dimen/dp_5"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@id/back"
        android:layout_marginTop="@dimen/dp_13"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignTop="@id/image"
        android:layout_alignBottom="@id/image"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/mainblack"
        android:text="WOODWICK无烟精油香氛大豆蜡..."
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/ping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="综合评分"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_below="@id/image"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <ImageView
        android:id="@+id/star_one"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:src="@mipmap/ping_star"
        android:layout_alignTop="@id/ping"
        android:layout_alignBottom="@id/ping"
        android:layout_toRightOf="@id/ping"
        android:layout_marginLeft="@dimen/dp_9"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        />
    <ImageView
        android:id="@+id/star_two"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:src="@mipmap/ping_star"
        android:layout_alignTop="@id/ping"
        android:layout_alignBottom="@id/ping"
        android:layout_toRightOf="@id/star_one"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        />
    <ImageView
        android:id="@+id/star_three"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:src="@mipmap/ping_star"
        android:layout_alignTop="@id/ping"
        android:layout_alignBottom="@id/ping"
        android:layout_toRightOf="@id/star_two"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        />
    <ImageView
        android:id="@+id/star_four"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:src="@mipmap/ping_starn"
        android:layout_alignTop="@id/ping"
        android:layout_alignBottom="@id/ping"
        android:layout_toRightOf="@id/star_three"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        />
    <ImageView
        android:id="@+id/star_five"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:src="@mipmap/ping_starn"
        android:layout_alignTop="@id/ping"
        android:layout_alignBottom="@id/ping"
        android:layout_toRightOf="@id/star_four"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        />
    <EditText
        android:id="@+id/tishi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:hint="亲，您对这个商品满意吗？您的评价会帮助我们选择更好的商品哦~"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/sp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="top"
        android:layout_below="@id/star_one"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@null"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tishi"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        >
    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_below="@id/recy"
        android:background="@drawable/back_btn"
        android:text="提交评价"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        />

</RelativeLayout>