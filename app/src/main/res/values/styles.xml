<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <declare-styleable name="RoundImageView">
        <attr name="image_radius" format="dimension" />//圆角大小
        <attr name="image_shadow_radius" format="dimension" />//阴影大小
        <attr name="image_circle" format="boolean" />//是否圆形
        <attr name="image_shadow" format="boolean" />//是否阴影
        <attr name="shadow_color" format="integer"/>//阴影颜色
    </declare-styleable>
    <style name="CheckBoxTheme">
        <item name="colorAccent">@color/main</item><!--选中颜色-->
        <item name="colorControlNormal">@color/mainblack</item><!--未选中颜色-->
    </style>



    <style name="blackTextStyle">
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="colorPrimaryTextStyle">
        <item name="android:textSize">@dimen/dp_19</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="whiteTextStyleTitle">
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="greyTextStyleSmall">
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>
    <!--normal白色文本-->
    <style name="whiteTextStyle">
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="blackTextStyleSmall">
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="greyTextStyleSmaller">
        <item name="android:textSize">@dimen/dp_17</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>
    <style name="colorPrimaryTextStyleSmall">
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
