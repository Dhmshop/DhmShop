<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_shop"
    android:paddingBottom="@dimen/dp_15"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        app:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美美哒"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/mainblack"
        android:layout_toRightOf="@id/image"
        android:layout_alignTop="@id/image"
        android:layout_marginTop="-3dp"
        android:layout_marginLeft="@dimen/dp_7"
        />
    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020.06.03"
        android:textSize="@dimen/sp_13"
        android:textColor="#999"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_5"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_shop"
        android:layout_below="@id/data"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_g"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_82"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            app:roundedCornerRadius="@dimen/dp_4"
            />
        <TextView
            android:id="@+id/name_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WOODWICK 无烟精油香氛大豆蜡烛亚麻..."
            android:textColor="@color/mainblack"
            android:layout_toRightOf="@id/image_g"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignTop="@id/image_g"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥158"
            android:textColor="@color/mainblack"
            android:textSize="@dimen/sp_15"
            android:layout_below="@id/name_g"
            android:layout_toRightOf="@id/image_g"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/param"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="@dimen/sp_12"
            android:text="宫廷系列-礼盒套装(云海苍蓝)"
            android:layout_toRightOf="@id/price"
            android:layout_alignTop="@id/price"
            android:layout_alignBottom="@id/price"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#E5E5E5"
            android:layout_below="@id/image_g"
            android:layout_marginTop="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合评分"
            android:textColor="@color/mainblack"
            android:textSize="@dimen/sp_14"
            android:layout_alignTop="@id/rebuy"
            android:layout_alignBottom="@id/rebuy"
            android:gravity="center"
            android:layout_alignLeft="@id/image_g"
            />
        <ImageView
            android:id="@+id/star_one"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/ping_star"
            android:layout_alignTop="@id/ping"
            android:layout_alignBottom="@id/ping"
            android:layout_toRightOf="@id/ping"
            android:layout_marginLeft="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            />
        <ImageView
            android:id="@+id/star_two"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/ping_star"
            android:layout_alignTop="@id/ping"
            android:layout_alignBottom="@id/ping"
            android:layout_toRightOf="@id/star_one"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            />
        <ImageView
            android:id="@+id/star_three"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/ping_star"
            android:layout_alignTop="@id/ping"
            android:layout_alignBottom="@id/ping"
            android:layout_toRightOf="@id/star_two"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            />
        <ImageView
            android:id="@+id/star_four"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/ping_starn"
            android:layout_alignTop="@id/ping"
            android:layout_alignBottom="@id/ping"
            android:layout_toRightOf="@id/star_three"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            />
        <ImageView
            android:id="@+id/star_five"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/ping_starn"
            android:layout_alignTop="@id/ping"
            android:layout_alignBottom="@id/ping"
            android:layout_toRightOf="@id/star_four"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            />
        <Button
            android:id="@+id/rebuy"
            android:layout_width="@dimen/dp_73"
            android:layout_height="@dimen/dp_26"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/white"
            android:background="@color/main"
            android:text="再次购买"
            android:layout_below="@id/image_g"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:textStyle="bold"
            />
    </RelativeLayout>

</RelativeLayout>