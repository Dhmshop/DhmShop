<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_15"
    android:background="@drawable/shape_shop">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        app:roundAsCircle="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欧美范儿"
        android:layout_alignTop="@id/image"
        android:layout_alignBottom="@id/image"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/sp_16"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_goods"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_120"
        app:roundedCornerRadius="@dimen/dp_10"
        android:layout_below="@id/image"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/name_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_goods"
        android:layout_toRightOf="@id/image_goods"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="法式甜美小清新气质休闲显瘦短袖连衣裙A字裙夏季"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/mainblack"
        android:lineHeight="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色:蓝色；尺码:M"
        android:textColor="#666"
        android:layout_below="@id/name_goods"
        android:layout_toRightOf="@id/image_goods"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_11"
        />
    <TextView
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/image_goods"
        android:background="@drawable/borders"
        android:text="修改"
        android:textColor="@color/main"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:layout_marginRight="@dimen/dp_15"
        />

</RelativeLayout>