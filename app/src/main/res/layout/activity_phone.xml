<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".view.mine.PhoneActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainblack"
            android:textSize="@dimen/sp_21"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="更改手机号"
            />
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_31"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/allback"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5"
        android:layout_below="@id/username"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/back_regist"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手机号"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_28"
            android:background="#DEDDE2"
            android:layout_marginLeft="@dimen/dp_18"
            />
        <EditText
            android:id="@+id/username"
            android:layout_width="@dimen/dp_200"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/back_regist"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_28"
            android:background="#DEDDE2"
            android:layout_marginLeft="@dimen/dp_18"
            />
        <EditText
            android:id="@+id/verification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:hint="请输入验证码"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/get_verification"
            android:layout_width="@dimen/dp_63"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/dp_6"
            android:textSize="@dimen/sp_10"
            android:layout_marginRight="@dimen/dp_20"
            />
    </LinearLayout>
    <Button
        android:id="@+id/sure"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:textSize="@dimen/sp_19"
        android:layout_below="@id/view2"
        android:layout_marginTop="@dimen/dp_55"
        android:background="@drawable/back_button"
        android:textColor="@color/white"
        />
</LinearLayout>