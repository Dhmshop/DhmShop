<?xml version="1.0" encoding="utf-8"?>
<dhm.com.dhmshop.framework.module.commodity.base.GradationScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/commde_titlell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/commdetai_img"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="fitXY"
            android:src="@mipmap/commodditydetails_shangpin"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:layout_marginBottom="7.5dp">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4.5dp"
                    android:src="@mipmap/rmb" />


                <TextView
                    android:id="@+id/commde_price"
                    style="@style/colorPrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="188"
                    android:textColor="@color/recommend" />


            </LinearLayout>

            <TextView
                android:id="@+id/commde_title"
                style="@style/blackTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:singleLine="false"
                android:text="WOODWICK无烟精油香氛大豆蜡烛 亚麻240G国内发货（预计1-3工作日内送达）"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/commed_youfei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/commed_youfeiima"
                android:layout_width="16.5dp"
                android:layout_height="16.5dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/commodditydetails_freeshipping" />

            <TextView
                android:id="@+id/commed_youfeitv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包邮"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_13"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@mipmap/commodditydetails_location" />

            <TextView
                android:id="@+id/commed_locationtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广东广州"
                android:textColor="#2f2f2f"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <include layout="@layout/layout_line" />

        <RelativeLayout
            android:id="@+id/commde_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="12.5dp"
            tools:ignore="InvalidId">

            <ImageView
                android:id="@+id/commode_pingjiatu"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/commodditydetails_comment" />

            <TextView
                android:id="@+id/commode_pingjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/commode_pingjiatu"
                android:text="宝贝评价"
                android:textColor="#2f2f2f"
                android:textSize="@dimen/sp_14" />

            <TextView

                android:id="@+id/commde_commentshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@id/commode_pingjia"
                android:text="(1111)"
                android:textColor="#2f2f2f"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/commode_chakantu"
                android:text="查看全部"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/commode_chakantu"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/commodditydetails_entercomments" />
        </RelativeLayout>

        <include layout="@layout/layout_line" />

        <RelativeLayout
            android:id="@+id/commdetail_jindian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_15">

            <ImageView
                android:id="@+id/commoditydetails_shop"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/commodditydetails_shop" />

            <TextView
                android:id="@+id/commoditydetails_shoptv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/commoditydetails_shop"
                android:text="纽扣星选"
                android:textColor="@color/mainblack"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/commode_jindian"
                android:text="进店逛逛"
                android:textColor="@color/mainblack"
                android:textSize="@dimen/dp_10" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_normal_bg"
            android:padding="@dimen/dp_8">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_toLeftOf="@+id/commdetail_tuodong"
                android:background="@color/deep_transparent" />

            <TextView
                android:id="@+id/commdetail_tuodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="继续拖动,查看图文详情"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@+id/commdetail_tuodong"
                android:background="@color/deep_transparent" />
        </RelativeLayout>
    </LinearLayout>

</dhm.com.dhmshop.framework.module.commodity.base.GradationScrollView>